model Product {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  image_url   String?
  sku         String    @unique
  price       Float
  categoryId  Int?
  variants    Variant[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Category    Category? @relation(fields: [categoryId], references: [id])

  @@index([sku])
  @@index([name])
  @@index([categoryId])
  @@map("catalog")
}

model Variant {
  id         Int     @id @default(autoincrement())
  name       String
  quantity   Int
  price      Float
  product_id Int
  Product    Product @relation(fields: [product_id], references: [id], onDelete: Cascade)

  @@map("variant")
}

model Category {
  id      Int       @id @default(autoincrement())
  name    String    @unique
  Product Product[]
}
