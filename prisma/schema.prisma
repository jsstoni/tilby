generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["tracing"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int         @id @default(autoincrement())
  name        String
  description String?
  image_url   String?
  price       Float
  sku         String      @unique
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  category    Category    @relation(fields: [category_id], references: [id])
  category_id Int
  inventory   Inventory[]

  @@map("catalog")
}

model Category {
  id       Int       @id @default(autoincrement())
  name     String
  products Product[]

  @@map("category")
}

model Inventory {
  id         Int     @id @default(autoincrement())
  name       String
  quantity   Int
  product    Product @relation(fields: [product_id], references: [id])
  product_id Int

  @@map("inventory")
}
